--- /srv/Product-XBET__NginxForward/nginx/conf.d/global/_default.conf	2018-09-20 20:59:23.413091062 +0800
+++ /tmp/_default.conf	2018-10-31 15:28:53.370641122 +0800
@@ -3,6 +3,20 @@
     server_name  _;
 
     include /usr/local/nginx/conf.d/include/xbet_official_masterconfig.include;
+  	location = /statuscheck {
+        set $test BLOCK;
+
+        if ($allowed_ip ~ "yes" ){
+          set $test ALLOW;
+        }
+
+        if ( $test = "BLOCK" ) {
+          return 403 '{"status":false}';
+          add_header Content-Type text/plain;
+        }
+        return 200 '{"status":true}';
+        add_header Content-Type text/plain;
+    }
 
     access_log  logs/default.access.log main;
     access_log  logs/default.logstash.access.log logstash;

