--- /srv/Product-XBET__APP_FTP/nginx/conf.d/global/_default.conf	2018-08-15 16:21:47.924009372 +0800
+++ /tmp/_default.conf	2018-10-31 15:30:33.693873954 +0800
@@ -3,6 +3,20 @@
     server_name  _;
 
     include /usr/local/nginx/conf.d/include/xbet_xbetaff_v1_masterconfig.include;
+  	location = /statuscheck {
+        set $test BLOCK;
+
+        if ($allowed_ip ~ "yes" ){
+          set $test ALLOW;
+        }
+
+        if ( $test = "BLOCK" ) {
+          return 403 '{"status":false}';
+          add_header Content-Type text/plain;
+        }
+        return 200 '{"status":true}';
+        add_header Content-Type text/plain;
+    }
 
     access_log  logs/default.access.log main;
     access_log  logs/default.logstash.access.log logstash;

